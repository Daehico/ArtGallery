@using WebUI.Models
@using WebUI.HtmlHelpers
@model ArtsListViewModel

@{
    ViewBag.Title = "Arts";
}

@foreach(var art in Model.Arts)
{
    <div>
        <h3>@art.ArtName</h3>
        <h3>@art.ArtOriginName</h3>
        <p>@art.CreationDate</p>
        <p>@art.Description</p>
        <p>@art.Size</p>
        <h4>@art.Price.ToString("# $")</h4>
    </div>
    <hr/>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x}))
</div>
